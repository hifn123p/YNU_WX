.item {
    display: flex;
    background-color: white;
    flex-direction: column;
    padding: 10rpx 0;
    box-sizing: border-box;
    margin: 10rpx;
}

.item-head {
    width: 100%;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.avatar {
    width: 70rpx;
    height: 70rpx;
    margin: 10rpx;
    border-radius: 50%;
}

.item-info {
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    margin-left: 20rpx;
}

.name {
    color: black;
    font-size: 14px;
}

.date {
    color: #aaa;
    font-size: 12px;
}

.delete {
    width: 35rpx;
    height: 35rpx;
    margin-left: 30rpx;
}

.item-content {
    display: -webkit-box;
    word-break: break-all;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
    font-size: 16px;
    margin: 15rpx;
}

.item-foot {
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-items: center;
}

.bottomItemView {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}

.bottomItemImage {
    width: 40rpx;
    height: 40rpx;
}

.bottomItemText {
    font-size: 10pt;
    color: #b8b2b2;
    margin-left: 10rpx;
    margin-top: 8rpx;
}

.line {
    width: 100%;
    height: 10rpx;
    background-color: #ccc;
}

.comments {
    background-color: #ccc;
}

.comments-item {
    display: flex;
    background-color: white;
    flex-direction: column;
    padding: 10rpx 0;
    box-sizing: border-box;
    margin-top: 2rpx;
}

.comment-content {
    display: -webkit-box;
    word-break: break-all;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
    font-size: 16px;
    margin-left: 108rpx;
    margin-right: 20rpx;
}

.footer {
    width: 100%;
    height: 60rpx;
    background: #f7f7f8;
    border-top: 1rpx solid #c4c4c4;
    padding: 15rpx;
    position: fixed;
    bottom: 0;
    display: flex;
    flex-direction: row;
}

.input-container {
    width: 80%;
    font-size: 32rpx;
    padding-right: 15rpx;
}

.hide{
  display:none
}
